<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="eu.styrian.neural.magician">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="eu.styrian.neural.magician.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />

                <service android:name=".api.interfaces.ImageService" />
            </intent-filter>
        </activity>
        <activity android:name="eu.styrian.neural.magician.activity.GalleryActivity"></activity>
        <activity android:name="eu.styrian.neural.magician.activity.CameraActivity"></activity>
    </application>

</manifest>